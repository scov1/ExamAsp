@model ExamAsp.Models.UserModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="btn_create">
    @Html.ActionLink("Создать", "Edit", "User")
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ФИО</th>
            <th scope="col">E-mail</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in ViewBag.Users)
            {
            <tr>
                <th scope="row">@item.FIO</th>
                <th scope="row">@item.Email</th>
                <td scope="row">@Html.ActionLink("Редактировать", "Edit", "User", new { id = @item.Id }, null)</td>
                <td scope="row">@Html.ActionLink("Удалить", "Delete", "User", new { id = @item.Id }, null)</td>
            </tr>

        }
    </table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
